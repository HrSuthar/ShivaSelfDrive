<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_View"
    android:focusable="true"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:cardCornerRadius="@dimen/_15sdp"
    android:layout_margin="@dimen/_22sdp"
    app:cardElevation="@dimen/_15sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_6sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/h_image_path"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:layout_weight="3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_12sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:orientation="vertical"
                    android:layout_weight="5"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/h_car_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorOnPrimary"
                        android:textSize="@dimen/_18sdp" />

                    <TextView
                        android:id="@+id/h_car_src_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/colorOnPrimary"
                        android:layout_marginTop="@dimen/_6sdp" />

                    <TextView
                        android:id="@+id/h_car_dest_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/colorOnPrimary"
                        android:layout_marginTop="@dimen/_6sdp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBorder"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_2sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_6sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RC Number:"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:id="@+id/h_reg_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorOnPrimary"
                    android:paddingRight="@dimen/_2sdp"
                    android:textSize="@dimen/_18sdp"
                    android:paddingLeft="@dimen/_2sdp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBorder"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_2sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_6sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:id="@+id/h_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorOnPrimary"
                    android:paddingRight="@dimen/_2sdp"
                    android:textSize="@dimen/_18sdp"
                    android:paddingLeft="@dimen/_2sdp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBorder"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_2sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_6sdp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cancel_booking"
                    android:clickable="true"
                    android:text="Cancel Booking"
                    android:backgroundTint="@color/teal_700"
                    android:visibility="gone"
                    android:focusable="true" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBorder"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_2sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_6sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingRight="@dimen/_6sdp"
                    android:layout_weight="3"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_6sdp">

                    <TextView
                        android:id="@+id/h_pick_up_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorOnPrimary"
                        android:textSize="@dimen/_18sdp" />

                    <TextView
                        android:id="@+id/h_drop_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorOnPrimary"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textSize="@dimen/_18sdp" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@color/colorBorder"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_6sdp"
                    android:layout_weight="3"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingStart="@dimen/_6sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount: "
                        android:textColor="@color/colorOnPrimary"
                        android:textSize="@dimen/_16sdp" />

                    <TextView
                        android:id="@+id/h_rental_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/teal_700"
                        android:padding="@dimen/_4sdp"
                        android:textStyle="bold"
                        android:textSize="@dimen/_18sdp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>