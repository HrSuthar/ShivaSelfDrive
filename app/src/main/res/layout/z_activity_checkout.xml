<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".bottomNav.home.cars.CheckoutFragment">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/z_activity_checkout">

        <androidx.cardview.widget.CardView
            android:id="@+id/pick_up_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            app:cardCornerRadius="@dimen/_1sdp"
            app:cardElevation="@dimen/_2sdp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_path"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitCenter"
                        android:layout_weight="3"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_12sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:orientation="vertical"
                        android:layout_weight="5"
                        android:paddingStart="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_8sdp">

                        <TextView
                            android:id="@+id/car_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorOnPrimary"
                            android:textSize="@dimen/_18sdp" />

                        <TextView
                            android:id="@+id/car_src_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_16sdp"
                            android:textColor="@color/colorOnPrimary"
                            android:layout_marginTop="@dimen/_6sdp" />

                        <TextView
                            android:id="@+id/car_dest_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_16sdp"
                            android:textColor="@color/colorOnPrimary"
                            android:layout_marginTop="@dimen/_6sdp" />

                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBorder"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_2sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_6sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vehicle RC Number: "
                            android:textColor="@color/colorOnPrimary"
                            android:textSize="@dimen/_18sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GJ19BX5254"
                            android:textColor="@color/colorOnPrimary"
                            android:textSize="@dimen/_18sdp" />

                    </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBorder"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_2sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_6sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_6sdp"
                        android:layout_weight="3"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_6sdp">

                        <TextView
                            android:id="@+id/pick_up_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorOnPrimary"
                            android:textSize="@dimen/_18sdp" />

                        <TextView
                            android:id="@+id/pick_up_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorOnPrimary"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textSize="@dimen/_16sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/colorBorder"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_6sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:paddingRight="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_weight="3"
                            android:paddingEnd="@dimen/_8sdp"
                            android:paddingStart="@dimen/_6sdp">

                            <TextView
                                android:id="@+id/rental_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/teal_700"
                                android:padding="@dimen/_4sdp"
                                android:textSize="@dimen/_16sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/day"
                                android:textColor="@color/colorOnPrimary"
                                android:textSize="@dimen/_16sdp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/final_rental_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/teal_700"
                            android:padding="@dimen/_4sdp"
                            android:textStyle="bold"
                            android:textSize="@dimen/_20sdp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorBorder"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"/>

                <!--End of the first section-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_12sdp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confirmation"
                            android:textColor="@color/colorOnPrimary"
                            android:textSize="@dimen/_18sdp" />

                        <TextView
                            android:id="@+id/order_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:alpha="0.6"
                            android:text="NPH72828383"
                            android:textColor="@color/teal_200"
                            android:textSize="@dimen/_16sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/colorBorder"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_12sdp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Number"
                            android:textColor="@color/colorOnPrimary"
                            android:textSize="@dimen/_18sdp" />

                        <TextView
                            android:id="@+id/contact_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:alpha="0.6"
                            android:text="6353977607"
                            android:textColor="@color/teal_200"
                            android:textSize="@dimen/_16sdp" />

                    </LinearLayout>

                </LinearLayout>

                <!--End of confirmation row-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorBorder"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/teal_200"
                    android:text="BOOKING SUCCESSFUL"
                    android:gravity="center"
                    android:padding="@dimen/_20sdp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <Button
            android:id="@+id/back_to_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:layout_gravity="bottom"
            android:padding="@dimen/_16sdp"
            android:text="Back to Home Page"
            android:textColor="@color/colorOnPrimary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
